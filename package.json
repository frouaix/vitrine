{
  "name": "vitrine",
  "version": "0.1.0",
  "description": "TypeScript library for canvas and WebGL rendering",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm lint",
    "lint": "tsc --noEmit",
    "build:examples": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "clean": "rm -rf dist dist-examples",
    "deploy": "pnpm build:examples && gh-pages -d dist-examples",
    "gallery": "vite"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frouaix/vitrine.git"
  },
  "bugs": {
    "url": "https://github.com/frouaix/vitrine/issues"
  },
  "homepage": "https://frouaix.github.io/vitrine/",
  "keywords": [
    "canvas",
    "webgl",
    "rendering",
    "typescript",
    "graphics"
  ],
  "author": "Fran√ßois Rouaix",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "@types/node": "^22.10.5",
    "gh-pages": "^6.3.0",
    "typescript": "^5.7.3",
    "vite": "^7.3.1"
  }
}
